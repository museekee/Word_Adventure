html 
    head 
        #wsurl(style="display: none;") #{ws}
        link(rel="stylesheet", href="/assets/styles/game.css")
        link(rel="stylesheet", href="/assets/styles/scrollbar.css")
        title=ko_KR.L["TITLE"]
    body
        #Main
            #Round_time_back 
                #Round_time_value
                    | 60
            #Word=ko_KR.L["game_ready"]
            #Bottom 
                input#Word-write(type="text" onKeypress="javascript:if(event.keyCode==13) {answer()}")
                #Info
                    div#Subject=ko_KR.L["game_ready"]
                    div#Wrong=ko_KR.L["game_ready"]
                    div#Round=ko_KR.L["game_ready"]
                    div#Exp=ko_KR.L["game_ready"]
            #All_time_back 
                #All_time_value
                    | 180
        #Result-main(style="display: none")
            img#ForP(src="/assets/images/fail.svg")
            #Result 
                h1 게임 결과
                .row 
                    span ✅ 정확도
                    #Accuracy_back 
                        #Accuracy_value
                            | 100%
                .row 
                    span ❌ 오답
                    span#Wrong_value 0개
                .row 
                    span 📃 선택한 카테고리
                    span#Category_value 카테고리/들입니다
                .row 
                    span 📚 게임 규칙
                    span#Rule_value 초성퀴즈/일부 동일 공개/200초
                .row 
                    span 🟢 경험치
                    span#Exp_value 🟢 +32767
                .row 
                    span 🟡 담
                    span#Dam_value +32767🟡
                .row 
                    span 🕐 남은 시간
                    span#Time_value 60초
        script(src="/assets/scripts/game.js") 