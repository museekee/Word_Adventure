include header
html 
    head 
        #wsurl(style="display: none;") #{ws}
        meta(http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate")
        link(rel="stylesheet", href="/assets/styles/game.css")
        title 워드 어드벤처
        #ws(style="display: none;")=ws
    body
        #Main
            #Round_time_back 
                #Round_time_value
                    | 60
            #Word 게임 준비중
            #Items
                button.GameItem(data-item-name="hint")
                    img(src="/assets/images/magnifier.svg")
                    span 힌트 (1000)
                button.GameItem(data-item-name="skip")
                    img(src="/assets/images/skip.svg")
                    span 스킵 (10000)
            #Bottom 
                input#Word-write(type="text" onKeypress="javascript:if(event.keyCode==13) {answer()}")
                #Info
                    div#Subject 게임 준비중
                    div#Wrong 게임 준비중
                    div#Round 게임 준비중
                    div#Exp 게임 준비중
            #All_time_back 
                #All_time_value
                    | 180
        #Result-main(style="display: none")
            img#ForP(src="/assets/images/fail.svg")
            #Result 
                h1 게임 결과
                .row 
                    span ✅ 정확도
                    #Accuracy_back 
                        #Accuracy_value
                            | 100%
                .row 
                    span ❌ 오답
                    span#Wrong_value 0개
                .row
                    span 🎮 플레이어
                    span#Player_value
                .row 
                    span 📃 선택한 카테고리
                    span#Category_value 카테고리/들입니다
                .row 
                    span 📚 게임 규칙
                    span#Rule_value 초성퀴즈/일부 동일 공개/200초
                .row 
                    span 🟢 경험치
                    span#Exp_value 🟢 +32767
                .row 
                    span 🟡 담
                    span#Dam_value +32767🟡
                .row 
                    span 🕐 남은 시간
                    span#Time_value 60초
                a(href="/")#Goto_lobby 확인
        script(src="/assets/scripts/game.js") 