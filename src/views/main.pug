include header
-
    const SHOP_CATEGORIES = ["all", "body", "eye", "mouth", "ear", "clothes", "glasses", "hat", "hand"]
    const SHOP_ICONS = ["📚", "몸", "👁️", "👄", "👂", "👕", "👓", "🧢", "🖐️"]
html 
    head
        script(src="/socket.io/socket.io.js")
        script(src="/assets/scripts/main.js" defer)
        link(rel="stylesheet", href="/assets/styles/main.css")
        link(rel="stylesheet", href="/assets/styles/scrollbar.css")
        title 워드 어드벤처
        #sessionId(style="display: none;")=sessionId
    body
        #main
            #Profile
                h1#Nickname 내 캐릭터
                #Exp
                    #Exp-bar-back.bar-back
                        #Exp-bar.bar(style="height: 100%;")
                        span#Exp-bar-value.bar-value #{user.exp}━12345
                    span EXP
                #Ziu
                    img.Ziu#Ziu-body(src="/assets/images/ziu/body/def.svg")
                    img.Ziu#Ziu-eye(src="/assets/images/ziu/eye/def.svg")
                    img.Ziu#Ziu-mouth(src="/assets/images/ziu/mouth/def.svg")
                    img.Ziu#Ziu-ear(src="")
                    img.Ziu#Ziu-clothes(src="/assets/images/ziu/clothes/def.svg")
                    img.Ziu#Ziu-glasses(src="")
                    img.Ziu#Ziu-hat(src="")
                    img.Ziu#Ziu-hand(src="")
                #Dam
                    #Dam-bar-back.bar-back
                        #Dam-bar.bar(style="height: 100%;")
                        span#Dam-bar-value.bar-value #{user.money}━#{user.money}
                    span 담
                #Buttons 
                    button 
                        img(src="/assets/images/shop.svg")
            #Game-menu(style="display: none;")
                #Categories
                    each item in categories
                        dama-leaf(data-category=item["ID"] onclick="category_click(this)")
                            span.Categories-leaf-title.Categories-leaf-text=item["NAME"]
                            span.Categories-leaf-description.Categories-leaf-text=item["DESCRIPTION"]
                #Game-option 
                    h1 게임 설정
                    div 
                        h2 라운드
                        span 
                            input#Round(type="number", value="10", max="50")
                            span 라운드
                    div 
                        h2 시간
                        span 
                            input#Time(type="number", value="200", max="500")
                            span 초
                button#Game-make(onclick="gameMake()") 게임 시작 
            #Shop
                #Shop-items
                #Shop-categories
                    - for (let i = 0; i < SHOP_CATEGORIES.length; i++) 
                        button(id=`Shop-${SHOP_CATEGORIES[i]}` onclick=`getShop("${SHOP_CATEGORIES[i]}")`)=SHOP_ICONS[i]