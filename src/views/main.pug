include header
-
    const SHOP_CATEGORIES = ["body", "eye", "mouth", "ear", "clothes", "glasses", "hat", "hand"]
    const SHOP_ICONS = ["몸", "👁️", "👄", "👂", "👕", "👓", "🧢", "🖐️"]
html 
    head
        script(src="/assets/scripts/main.js" defer)
        link(rel="stylesheet", href="/assets/styles/main.css")
        link(rel="stylesheet", href="/assets/styles/scrollbar.css")
        title 워드 어드벤처
        #ws(style="display: none;")=ws
    body
        #dialogs
            dialog#Profile-dialog(style="width: 1000px; height: 600px;" open)
                .dialog-header
                    h1 !오류로 인해 아이템이 갑자기 없어지더라도 보상 안함!
                    .dialog-close
                #Profile-dialog-main
                    #Charactor
                        #Mini-ziu
                        input#Set-nickname(type="text")
                    #Effect
                        h2 효과
                    #Inventory
                
        #main
            #Profile
                h1#Nickname 내 캐릭터
                #Exp
                    #Exp-bar-back.bar-back
                        #Exp-bar.bar(style="height: 100%;")
                        span#Exp-bar-value.bar-value #{user.exp}
                    span EXP
                #Ziu
                #Dam
                    #Dam-bar-back.bar-back
                        #Dam-bar.bar(style="height: 100%;")
                        span#Dam-bar-value.bar-value #{user.money}━#{user.money}
                    span 담
                #Menu
                    button(onclick="onClick_Menu('gameMenu')")
                        img(src="/assets/images/home.svg")
                    button(onclick="onClick_Menu('shop')")
                        img(src="/assets/images/shop.svg")
                    button(onclick="onClick_Menu('profile', true)")
                        img(src="/assets/images/profile.svg")
            - if (SESSION.isLogin)
                #Game-menu
                    #Categories
                        each item in categories
                            dama-leaf(data-category=item["ID"] onclick="category_click(this)")
                                span.Categories-leaf-title.Categories-leaf-text=item["NAME"]
                                span.Categories-leaf-description.Categories-leaf-text=item["DESCRIPTION"]
                    #Game-option 
                        h1 게임 설정
                        div
                            h2 게임 종류
                            select#GameRule
                                option(value="choQuiz") 초성퀴즈
                                option(value="jungjongQuiz") 중종성퀴즈
                        div 
                            h2 라운드
                            span 
                                input#Round(type="number", value="10", max="50")
                                span 라운드
                        div 
                            h2 시간
                            span 
                                input#Time(type="number", value="200", max="500")
                                span 초
                    button#Game-make(onclick="gameMake()") 게임 시작
                #Shop(style="display: none;")
                    #Shop-items
                    #Shop-categories
                        button#Shop-all(onclick='getShop("all")') 📚
                        - for (let i = 0; i < SHOP_CATEGORIES.length; i++) 
                            button(id=`Shop-${SHOP_CATEGORIES[i]}` onclick=`getShop("${SHOP_CATEGORIES[i]}")`)=SHOP_ICONS[i]
            - else
                h1 게임을 즐기시려면 로그인을 해야합니다.