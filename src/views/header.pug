-
    const SESSION = session
head
    link(rel='stylesheet', href='/assets/styles/header.css')
    script(src="/socket.io/socket.io.js")
    script(src="/assets/scripts/swal.js")
    script(src="/assets/scripts/header.js")
    link(rel="stylesheet", href="/assets/styles/scrollbar.css")
mixin Dialog(id, w, h)
    - const WidthHeight = `width: ${w}px; height: ${h}px;`
    .Dialog-hide-back(id=`__${id}Back__`)
        .Dialog(style=WidthHeight)
            .Dialog-head
                .Dialog-head-close(onclick=`__closeDialog__('${id}')`) x
            block
body
    +Dialog("joinDialog", 700, 400)
        #__joinDialog__
            h1 ✒️ 회원가입
            .__right__
                h2 아이디
                input#____Jid____(maxlength='30')
                h6 1~30자의 영숫자 또는 언더바
                h2 비밀번호
                input#____Jpw____(type="password" maxlength='128')
                h6 8~128자의 영숫자
                h2 비밀번호 확인
                input#____JpwC____(type="password" maxlength='128')
                h6 위 비밀번호
                h2 닉네임
                input#____Jnick____(maxlength='20')
                h6 2~20자의 한글 또는 영숫자 또는 언더바
                button(onclick="join()") 회원가입
    +Dialog("loginDialog", 700, 400)
        #__loginDialog__
            h1 🔑 로그인
            .__right__
                h2 아이디
                input#____Lid____(maxlength='30')
                h2 비밀번호
                input#____Lpw____(type="password" maxlength='128')
                button(onclick="login()") 로그인
    header#__header__
        img#__logo__(src="/assets/images/logo.svg")
        #__profile__
            - if (!SESSION.isLogin)
                span#__join__(onclick="__showDialog__('joinDialog')") 회원가입
                span#__login__(onclick="__showDialog__('loginDialog')") 로그인
            - else
                span#__nickname__(onclick="logout()")=SESSION.user.nick